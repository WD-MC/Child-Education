<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Documents form view -->
        <record id="yh_documents_form_view" model="ir.ui.view">
            <field name="name">yh.documents.form.view</field>
            <field name="model">yh.documents</field>
            <field name="arch" type="xml">
                <form string="Document">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Documents list or tree view -->
        <record id="yh_documents_tree_view" model="ir.ui.view">
            <field name="name">yh.documents.tree.view</field>
            <field name="model">yh.documents</field>
            <field name="arch" type="xml">
                <tree string="Document">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <!-- Documents Action for city submenu -->
        <record id="yh_documents_action" model="ir.actions.act_window">
            <field name="name">Document</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">yh.documents</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Document yet!
              </p><p>
                Please add a new document!
              </p>
            </field>
        </record>
        <menuitem id="yh_root_menu"
        name="Your Home"
        sequence="85"
        parent="website.menu_website_configuration"/>

        <menuitem id="yh_documents_menu"
        name="Document"
        sequence="1"
        parent="yh_root_menu"
        action="theme_yourHome.yh_documents_action"/>
    </data>
</odoo>
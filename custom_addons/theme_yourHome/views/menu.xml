<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="menu_cours" model="website.menu">
            <field name="name">Cours</field>
            <field name="url">/cours</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>
        <record id="menu_bibliothèque" model="website.menu">
            <field name="name">Bibliothèque</field>
            <field name="url">/bibliothèque</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>

            <field name="name">Services</field>
            <field name="url">/services</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">15</field>
            <field name="is_mega_menu">True</field>
            <field name="mega_menu_content" type="html">
                <section class="o_cc5">
                    <div class="container">
                        <div class="row py-5">
                            <div class="col-lg-3">
                                <div class="pb-2 my-2 border-bottom"><a href="/" class="h4">Communauté et support</a></div>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Forum et discution</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Conseils pour les parents</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>FAQ (Foire Aux Questions)</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-3">
                                <div class="pb-2 my-2 border-bottom"><a href="/" class="h4">Événements et ateliers</a></div>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Webinaires éducatifs</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Concours et défis</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Clubs de lecture</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Calendrier des événements</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-3">
                                <div class="pb-2 my-2 border-bottom"><a href="/" class="h4">Suivi et évaluation</a></div>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
                                            <span class="fa fa-caret-right mr-2"/>
                                            <span>Tableau de bord des progrès</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-white d-flex align-items-center text-decoration-none">
